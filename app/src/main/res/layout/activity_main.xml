<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/circle" />

        <RadioButton
            android:id="@+id/radioBtnCircle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="130dp"
            android:text="@string/textCircle" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="220dp"
            android:src="@mipmap/cruz" />

        <RadioButton
            android:id="@+id/radioBtnCruz"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="250dp"
            android:text="@string/textCruz" />

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="355dp"
        android:background="#7381ce">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/sonrisa" />

        <RadioButton
            android:id="@+id/radioBtnFirst"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:text="@string/textFirst"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="448dp"
        android:background="@android:color/holo_orange_light">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:src="@mipmap/play"/>

    </RelativeLayout>

</RelativeLayout>